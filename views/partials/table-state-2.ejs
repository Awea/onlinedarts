<table class="table table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th></th>
      <% game.players.forEach((player) => { %>
        <th class="player-<%= player.name %>-cell"><%= player.name %></th>
        <% }); %>
        <th class="game-state-2">Simple</th>
        <th class="game-state-2">Double</th>
        <th class="game-state-2">Triple</th>
    </tr>
  </thead>
  <tbody>
    <% for(var i=0; i < 8; i++) {%>
      <tr>
        <th scopre="row">
          <%= game.scoresList[i] %>
       </th>
        <% game.players.forEach((player) => { %>
          <td class="player-<%= player.name %>-cell"><%= player.scores[i] %></td>
        <% }); %>
          <% if (i < 7) { %>
            <td class="game-state-2"><button onclick="DartButtonsclick(this)" class="dart-button btn btn-secondary" data-n=0 data-combo=1 data-value=<%= i %>>&nbsp;</button> </td>
            <td class="game-state-2"><button onclick="DartButtonsclick(this)" class="dart-button btn btn-primary" data-n=0 data-combo=2 data-value=<%= i %>>&nbsp;</button> </td>
            <% if (i < 6) { %>
              <td class="game-state-2"><button onclick="DartButtonsclick(this)" class="dart-button btn btn-danger" data-n=0 data-combo=3 data-value=<%= i %>>&nbsp;</button> </td>
            <% } %>
          <% } %>

      </tr>
    <% } %>

  </tbody>
</table>
